<h1>Gamer Profile</h1>
<p><%= @user.first_name %> <%= @user.last_name %></p>
<p>
	<div>W/L/D: <%= @numwins %>:<%= @numlosses %>:<%= @numdraws %></div>
</p>
<table>
	<tr>
		<td>Game ID</td>
		<td>Result</td>
		<td>Ended</td>
	</tr>
	<% @games.each do |g| %>
		<tr>
			<td><%= g.id %></td>
			<td><% if g.winner.to_i == @user.id.to_i %>Won<% else %>Lost<% end %></td>
			<td><%= g.last_turn %></td>
		</tr>
	<% end %>
</table>