<h1>Create Game</h1>

<b>New Game Options</b>
<%= form_for :game, :url => {:action => :create } do |f| %>
	<%= f.label :game_type%>
	<%= f.select :type, options_for_select([["Tic Tac Toe", "1"], ["The Shining", "2"]]), :placeholder=>"Required" %>
	</br></br>
	<%= f.label :players%>
	</br>
	<% @friends.each do |friend| %>
	<%= check_box_tag 'friend.' + friend.id.to_s %><%= " " + friend.first_name + " " + friend.last_name %></br>
	<% end %>
</br>
<button type='submit' name='commit'>Create Game</button>
<% end %>